<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HoodGrocer.UI.CartPage"
             xmlns:viewModels="clr-namespace:HoodGrocer.Models">

    <ContentPage.BindingContext>
        <viewModels:CartProductViewModel/>
    </ContentPage.BindingContext>

    <StackLayout>
        <ListView ItemsSource="{Binding CartProducts}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Product.ItemName}" VerticalOptions="Center"/>
                            <Label Text="{Binding Product.ItemPrice, StringFormat='Price: {0:C}'}" VerticalOptions="Center"/>
                            <Label Text="Quantity: " VerticalOptions="Center"/>
                            <Entry Text="{Binding ItemQuantity}" Keyboard="Numeric"/>
                            <Button Text="Remove" Clicked="OnRemoveClicked"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Text="{Binding TotalPrice, StringFormat='Total Price: {0:C}'}"/>
    </StackLayout>
    
</ContentPage>