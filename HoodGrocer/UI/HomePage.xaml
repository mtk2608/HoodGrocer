<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HoodGrocer.UI.HomePage"
             Title="HomePage">
    
    <ScrollView>
        <VerticalStackLayout>
            <Grid BackgroundColor="White" Margin="5">
                <!-- Image -->
                <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="100" Margin="5"/>

                <!-- Item Details -->
                <StackLayout Margin="5" VerticalOptions="EndAndExpand">
                    <Label Text="{Binding Name}" FontSize="Medium" FontAttributes="Bold"/>
                    <Label Text="{Binding Price, StringFormat='{}${0:F2}'}" TextColor="Green"/>
                    <Button Text="Add to Cart" HorizontalOptions="End" Margin="0,5,0,0"/>
                </StackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>